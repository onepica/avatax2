<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="OnePica\AvaTax\Api\ConfigRepositoryInterface" type="OnePica\AvaTax\Model\Service\ConfigRepository"/>
    <preference for="OnePica\AvaTax\Api\Service\ResolverInterface" type="OnePica\AvaTax\Model\Service\Resolver"/>
    <preference for="OnePica\AvaTax\Api\Service\LoggerInterface" type="OnePica\AvaTax\Model\Service\Logger"/>
    <preference for="OnePica\AvaTax\Api\LogRepositoryInterface" type="OnePica\AvaTax\Model\LogRepository"/>
    <preference for="OnePica\AvaTax\Api\DataSourceInterface" type="OnePica\AvaTax\Model\Service\DataSource\Calculation"/>
    <preference for="OnePica\AvaTax\Api\QueueRepositoryInterface" type="OnePica\AvaTax\Model\QueueRepository"/>
    <preference for="OnePica\AvaTax\Api\Data\QueueSearchResultsInterface" type="Magento\Framework\Api\SearchResults"/>
    <preference for="OnePica\AvaTax\Api\Data\QueueInterface" type="OnePica\AvaTax\Model\Queue"/>
    <virtualType name="OnePica\AvaTax\Model\Session\Storage" type="Magento\Framework\Session\Storage">
        <arguments>
            <argument name="namespace" xsi:type="string">onepica_avatax</argument>
        </arguments>
    </virtualType>
    <type name="OnePica\AvaTax\Model\Session">
        <arguments>
            <argument name="storage" xsi:type="object">OnePica\AvaTax\Model\Session\Storage</argument>
        </arguments>
    </type>
    <type name="Magento\Quote\Model\Quote\Config">
        <plugin name="magento-quote-model-quote-config-plugin"
                type="OnePica\AvaTax\Plugin\Magento\Quote\Model\Quote\Config" sortOrder="10" />
    </type>
    <preference for="OnePica\AvaTax\Api\QueueRepositoryInterface" type="OnePica\AvaTax\Model\QueueRepository"/>
    <preference for="OnePica\AvaTax\Api\Data\QueueSearchResultsInterface" type="Magento\Framework\Api\SearchResults"/>
    <preference for="OnePica\AvaTax\Api\Data\QueueInterface" type="OnePica\AvaTax\Model\Queue"/>
    <type name="Magento\Tax\Model\Calculation">
        <plugin name="avatax_tax_calculation_plugin"
                type="OnePica\AvaTax\Plugin\Magento\Tax\Model\Calculation" sortOrder="10" />
    </type>
    <type name="Magento\Tax\Model\Config">
        <plugin name="avatax_tax_config_plugin"
                type="OnePica\AvaTax\Plugin\Magento\Tax\Model\Config" sortOrder="10" />
    </type>
    <type name="Magento\Tax\Helper\Data">
        <plugin name="avatax_tax_data_helper_plugin"
                type="OnePica\AvaTax\Plugin\Magento\Tax\Helper\Data" sortOrder="10" />
    </type>
    <type name="Magento\Weee\Model\Config">
        <plugin name="avatax_weee_model_config_plugin"
                type="OnePica\AvaTax\Plugin\Magento\Weee\Model\Config" sortOrder="10" />
    </type>
    <type name="Magento\GiftWrapping\Helper\Data">
        <plugin name="avatax_giftwrapping_data_helper_plugin"
                type="OnePica\AvaTax\Plugin\Magento\GiftWrapping\Helper\Data" sortOrder="10" />
    </type>
    <type name="OnePica\AvaTax\Model\Service\Resolver">
        <arguments>
            <argument name="data" xsi:type="array">
                <item name="avatax16" xsi:type="array">
                    <item name="service" xsi:type="string">OnePica\AvaTax\Model\Service\Avatax16</item>
                    <item name="service_config" xsi:type="string">OnePica\AvaTax\Model\Service\Avatax16\Config</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Checkout\Model\ShippingInformationManagement">
        <plugin name="onepica_avatax_onepage_address_validation" type="OnePica\AvaTax\Plugin\Checkout\Model\ShippingInformationManagement" />
    </type>
    <type name="Magento\Quote\Model\Quote\Address">
        <plugin name="quote_model_quote_address_validator" type="OnePica\AvaTax\Plugin\Quote\Model\Quote\AddressValidator" />
    </type>
    <virtualType name="LogGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">OnePica\AvaTax\Model\ResourceModel\Log\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">LogGirdFilterPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="LogGirdFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="OnePica\AvaTax\Model\ResourceModel\Log\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">avatax_log</argument>
            <argument name="eventPrefix" xsi:type="string">onepica_avatax_log_collection</argument>
            <argument name="eventObject" xsi:type="string">avatax_log_collection</argument>
            <argument name="resourceModel" xsi:type="string">OnePica\AvaTax\Model\ResourceModel\Log</argument>
        </arguments>
    </type>
<!-- Customer Tax Classes -->
    <virtualType name="Magento\Tax\Model\ResourceModel\Customer\Grid\Collection" type="OnePica\AvaTax\Model\ResourceModel\Customer\TaxClass\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">tax_class</argument>
            <argument name="resourceModel" xsi:type="string">Magento\Tax\Model\ResourceModel\TaxClass</argument>
        </arguments>
    </virtualType>

    <!-- define filter pool provider (cache pool provider) -->
    <virtualType name="FPCustomerTax" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- define grid data provider -->
    <virtualType name="GDPCustomerTax" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Magento\Tax\Model\ResourceModel\Grid\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">FPCustomerTax</argument>
        </arguments>
    </virtualType>
<!--  -->
<!-- Product Tax Classes -->
    <virtualType name="Magento\Tax\Model\ResourceModel\Product\Grid\Collection" type="OnePica\AvaTax\Model\ResourceModel\Product\TaxClass\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">tax_class</argument>
            <argument name="resourceModel" xsi:type="string">Magento\Tax\Model\ResourceModel\TaxClass</argument>
        </arguments>
    </virtualType>

    <!-- define filter pool provider (cache pool provider) -->
    <virtualType name="FPProductTax" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- define grid data provider -->
    <virtualType name="GDPProductTax" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Magento\Tax\Model\ResourceModel\Grid\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">FPProductTax</argument>
        </arguments>
    </virtualType>
    <!--  -->

    <!-- this type should be in etc/di.xml, otherwise it can broke native functionality -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="avatax_queue_listing_data_source" xsi:type="string">OnePica\AvaTax\Model\ResourceModel\Queue\Grid\Collection</item>
                <item name="avatax_log_listing_data_source" xsi:type="string">OnePica\AvaTax\Model\ResourceModel\Log\Grid\Collection</item>
                <item name="ctc_listing_data_source" xsi:type="string">Magento\Tax\Model\ResourceModel\Customer\Grid\Collection</item>
                <item name="ptc_listing_data_source" xsi:type="string">Magento\Tax\Model\ResourceModel\Product\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
</config>
